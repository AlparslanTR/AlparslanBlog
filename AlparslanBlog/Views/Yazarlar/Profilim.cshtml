@model EntityLayer.Concrete.Yazar
@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_AdminPaneli.cshtml";
}

@using(Html.BeginForm("Profilim","Yazarlar",FormMethod.Post))
{

 <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Profilim</h4>
                    <form class="forms-sample">
                      <div class="form-group">
                          <input hidden="hidden" type="text" asp-for="YazarID" class="form-control form-control-lg"/>
                       <label asp-for="YazarAd">Adınız Soyadınız</label>
                         <input asp-for="YazarAd" class="form-control form-control-lg" type="text" />
                         @Html.ValidationMessageFor(x=>x.YazarAd)
                      </div>
                      <div class="form-group">
                          <label asp-for="YazarMail">Mail Adresiniz</label>
                        <input asp-for="YazarMail" class="form-control form-control-lg" type="email" />
                        @Html.ValidationMessageFor(x=>x.YazarMail)
                      </div>
                      <div class="form-group">
                        <label asp-for="YazarSifre">Şifreniz</label>
                        <input asp-for="YazarSifre" class="form-control form-control-lg" type="password" id="Sifre"/>
                        @Html.ValidationMessageFor(x=>x.YazarSifre)
                         <br />
                        <input id="tik" type="checkbox"/> 
                        <label>&nbsp Şifreyi Göster</label>
                      </div>
                      <div class="form-group">
                            <label asp-for="YazarResim">Profil Resim URL Adresi Giriniz</label>
                            <input asp-for="YazarResim" class="form-control form-control-lg" type="url" />
                      </div>
                      <div class="form-group">
                          <label asp-for="YazarHakkinda">Hakkınızda</label>
                          <textarea asp-for="YazarHakkinda" class="form-control form-control-lg"rows="10"></textarea>
                          @Html.ValidationMessageFor(x=>x.YazarHakkinda)
                      </div>
                      <button onclick="Guncelle()"class="btn btn-gradient-info mr-2">Güncelle</button>
                    </form>
                  </div>
                </div>
              </div>
}
<script src="js/bootstrap.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<link rel="stylesheet" href="sweetalert2.min.css">
<script>
function Guncelle() {
   swal("İşlem Başarılı","Profiliniz Güncellendi","success");
}
</script>

<script>
isPassword=true
function tik(){
isPassword = !isPassword
type = isPassword ? 'password':'text'
var txt=document.getElementById('Sifre')
txt.type = type
}

document.getElementById('tik').onclick=tik
</script>
