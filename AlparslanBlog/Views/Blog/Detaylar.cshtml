@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "Detaylar";
    Layout = "~/Views/Shared/_BloglarLayout.cshtml";
}
<!DOCTYPE html>
<html lang="zxx">

<body>
	<!--Header-->
	<!--//header-->
	<!--//banner-->
	<section class="banner-bottom">
		<!--/blog-->
		<div class="container">
			<div class="row">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					@foreach(var x in Model){
					<div class="blog-grid-top">
						<div class="b-grid-top">
							<div class="blog_info_left_grid">		
									<img src="@x.BlogResim" class="img-fluid" alt="">
							</div>
						</div>

						<h3>
							@x.BlogBasligi
						</h3>
						@Html.Raw(@x.BlogIcerik)
					</div>}
				</div>

				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
                        @await Html.PartialAsync("~/Views/Aboneler/AboneOl.cshtml")
						@await Component.InvokeAsync("YazarSonBlog")
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>
	<!--//main-->

	<!--footer-->
	<!---->
	<!-- js -->
	<script src="js/jquery-2.2.3.min.js"></script>
	<!-- //js -->
	<!--/ start-smoth-scrolling -->
	<script src="js/move-top.js"></script>
	<script src="js/easing.js"></script>
	<script>
		jQuery(document).ready(function ($) {
			$(".scroll").click(function (event) {
				event.preventDefault();
				$('html,body').animate({
					scrollTop: $(this.hash).offset().top
				}, 900);
			});
		});
	</script>
	<!--// end-smoth-scrolling -->

	<script>
		$(document).ready(function () {
			/*
									var defaults = {
							  			containerID: 'toTop', // fading element id
										containerHoverID: 'toTopHover', // fading element hover id
										scrollSpeed: 1200,
										easingType: 'linear' 
							 		};
									*/

			$().UItoTop({
				easingType: 'easeOutQuart'
			});

		});
	</script>
	<a href="#home" class="scroll" id="toTop" style="display: block;">
		<span id="toTopHover" style="opacity: 1;"> </span>
	</a>

	<!-- //Custom-JavaScript-File-Links -->
	<script src="js/bootstrap.js"></script>


</body>

</html>

