@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "Düzenle";
    Layout = "~/Views/Shared/_AdminPaneli.cshtml";
}

<h1>Düzenle</h1>
@using(Html.BeginForm("Düzenle","Blog",FormMethod.Post))
{
    <input hidden="hidden" type="text" asp-for="BlogID" class="form-control form-control-lg"/>
    <label asp-for="BlogBasligi">Blog Başlığı</label>
    <input asp-for="BlogBasligi" class="form-control form-control-lg" type="text" />
    @Html.ValidationMessageFor(x=>x.BlogBasligi)
    <br />
    <label asp-for="BlogOzet">Bloğunuzu 1 Cümle İle Tanımlayınız</label>
    <input asp-for="BlogOzet" class="form-control form-control-lg" type="text" />
    @Html.ValidationMessageFor(x=>x.BlogOzet)
    <br />
     <label asp-for="KategoriID">Kategori Seçiniz</label>
     <br />
     <select class="form-control form-control-lg" asp-for="KategoriID" asp-items="ViewBag.ktg">
         <option>Kategori Seçiniz</option>
     </select>
    <br />
   <label asp-for="BlogUfakResim">Blog İçin Ufak Resim URL Adresi Giriniz</label>
    <input asp-for="BlogUfakResim" class="form-control form-control-lg" type="url" />
    @Html.ValidationMessageFor(x=>x.BlogUfakResim)
    <br />
    <label asp-for="BlogResim">Blog İçin Büyük Resim URL Adresi Giriniz</label>
    <input asp-for="BlogResim" class="form-control form-control-lg" type="url" />
    @Html.ValidationMessageFor(x=>x.BlogResim)
    <br />
    <input hidden="hidden" type="text" asp-for="BlogOlusturmaTarihi" class="form-control form-control-lg"/>
    <label asp-for="BlogIcerik">Blog İçin Açıklamanızı Yazın</label>
    <textarea asp-for="BlogIcerik" id="summernote" class="form-control form-control-lg"></textarea>
    @Html.ValidationMessageFor(x=>x.BlogIcerik)
    <br />
    <button onclick="Guncelle()" class="btn btn-gradient-info">Güncelle</button>
}
<script src="js/bootstrap.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<link rel="stylesheet" href="sweetalert2.min.css">

<script>
function Guncelle() {
   swal("İşlem Başarılı","Blog Güncellendi","success");
}
</script>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <script>
      $('#summernote').summernote({
        tabsize: 2,
        height: 400,
        toolbar: [
          ['style', ['style']],
          ['font', ['bold', 'underline', 'clear']],
          ['color', ['color']],
          ['para', ['ul', 'ol', 'paragraph']],
          ['table', ['table']],
          ['insert', ['link', 'picture', 'video']],
          ['view', ['fullscreen', 'codeview', 'help']]
        ]
      });
    </script>