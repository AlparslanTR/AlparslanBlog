	<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
	    rel="stylesheet">
</head>

<body>
	<!--Header-->
	<!--//header-->

	<!--/banner-->
	<!--//banner-->
	<!--/main-->
	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Kayıt Olun</h3>
				<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using(Html.BeginForm("KayıtOl","Giris",FormMethod.Post)){
						<div class="form-row">
								<div class="col-md-6 mb-3">
										<label for="validationCustom01">Adınız Soyadınız</label>

									@*<input type="text" class="form-control" id="validationDefault01" name="YazarAd" placeholder="Ad Soyad" required="">*@
									@Html.TextBoxFor(x=>x.YazarAd, new {@class="form-control"})
									@Html.ValidationMessageFor(x=>x.YazarAd)
								</div>
								<div class="col-md-6 mb-3">
										<label for="validationCustom02">Mail Adresiniz</label>
									@*<input type="email" class="form-control" id="validationDefault02" name="YazarMail" placeholder="Mail" required="">*@
									@Html.TextBoxFor(x=>x.YazarMail, new {@class="form-control"})
									@Html.ValidationMessageFor(x=>x.YazarMail)
								</div>
							</div>
							<div class="form-row">
								<div class="form-group col-md-6">
										<label for="exampleInputPassword1 mb-2">Şifre</label>
									@*<input type="password" class="form-control" name="YazarSifre" id="password1" placeholder="Şifre" required="">*@
									@Html.PasswordFor(x=>x.YazarSifre, new {@class="form-control"})
									@Html.ValidationMessageFor(x=>x.YazarSifre)
								</div>
								<div class="form-group col-md-6">
										<label for="exampleInputPassword2 mb-2">Şifreyi Onayla</label>
										@*<input type="password" class="form-control" name="YazarSifre" id="password2" placeholder="Tekrar Şifre" required="">*@
									@Html.PasswordFor(x=>x.YazarSifre, new {@class="form-control"}) 
									@Html.ValidationMessageFor(x=>x.YazarSifre)
									</div>
								
							</div>
							<button id="KayitOl" type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
								<p>
									<a href="#" id="kayitol">Bütün gizlilik koşullarımızı kabul ettiniz.</a>
								</p>
						 }
		
					</div>
			</div>
		</div>
		<script>
		$('#kayitol').click(function (){
			swal("Gizlilik Sözleşmesi","Gizlilik Kurallarımız, İletişimler, Site Kullanım Şartları ve Kişisel Verilerinizin İşlenmesi ile ilgili uygulamalarımız ve Kisisel Verilerin Korunması Kanunu kapsamındaki haklarınız hususunda sizleri bilgilendirmek isteriz.");
		});
	</script>
	<script>
		$('#KayitOl').click(function (){
		swal("Süper", "Kaydınız Yapıldı", "success");
		});
		</script>
	</section>
	<!--//main-->
	<!--footer-->
	<!---->	
	<!-- js -->
	<script src="js/jquery-2.2.3.min.js"></script>
	<!-- //js -->
	<!-- password-script -->
	<script>
		window.onload = function () {
			document.getElementById("password1").onchange = validatePassword;
			document.getElementById("password2").onchange = validatePassword;
		}

		function validatePassword() {
			var pass2 = document.getElementById("password2").value;
			var pass1 = document.getElementById("password1").value;
			if (pass1 != pass2)
				document.getElementById("password2").setCustomValidity("Passwords Don't Match");
			else
				document.getElementById("password2").setCustomValidity('');
			//empty string means no validation error
		}
	</script>
	<!-- //password-script -->

	<!--/ start-smoth-scrolling -->
	<script src="js/move-top.js"></script>
	<script src="js/easing.js"></script>
	<script>
		jQuery(document).ready(function ($) {
			$(".scroll").click(function (event) {
				event.preventDefault();
				$('html,body').animate({
					scrollTop: $(this.hash).offset().top
				}, 900);
			});
		});
	</script>
	<!--// end-smoth-scrolling -->

	<script>
		$(document).ready(function () {
			/*
									var defaults = {
							  			containerID: 'toTop', // fading element id
										containerHoverID: 'toTopHover', // fading element hover id
										scrollSpeed: 1200,
										easingType: 'linear' 
							 		};
									*/

			$().UItoTop({
				easingType: 'easeOutQuart'
			});

		});
	</script>
	<a href="#home" class="scroll" id="toTop" style="display: block;">
		<span id="toTopHover" style="opacity: 1;"> </span>
	</a>
	<!-- //Custom-JavaScript-File-Links -->
	<script src="js/bootstrap.js"></script>
