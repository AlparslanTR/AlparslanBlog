
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Sayfası</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/AdminPaneli/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/AdminPaneli/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/AdminPaneli/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/AdminPaneli/assets/images/favicon.ico" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
      <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
          <a class="brand-logo-mini" href="#"><img src="~/AdminPaneli/assets/images/logo.png" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-stretch">
          <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
            <span class="mdi mdi-menu"></span>
          </button>
          <div class="search-field d-none d-md-block">
          </div>
          <ul class="navbar-nav navbar-nav-right">
            @await Component.InvokeAsync("AdminBilgiTasima")
            <li class="nav-item d-none d-lg-block full-screen-link">
              <a class="nav-link">
                <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                <i class="mdi mdi-email-outline"></i>
                <span class="count-symbol bg-warning"></span>
              </a>
              @await Component.InvokeAsync("AdminMesajlar")
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
                <i class="mdi mdi-bell-outline"></i>
                <span class="count-symbol bg-danger"></span>
              </a>
             @await Component.InvokeAsync("AdminBildirimler")
            </li>
            <li class="nav-item nav-logout d-none d-lg-block">
              <a class="nav-link" href="~/Giris/CikisYap">
                <i class="mdi mdi-power"></i>
              </a>
            </li>
          </ul>
          <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="mdi mdi-menu"></span>
          </button>
        </div>
      </nav>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
          <ul class="nav">
           @await Component.InvokeAsync("AdminBilgiTasimaNavbar")
            <li class="nav-item">
                <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
              <span class="menu-title">Kontrol Paneli</span>
                <i class="mdi mdi mdi-account menu-icon"></i>
                 <i class="menu-arrow"></i>
              </a>
               <div class="collapse" id="ui-basic">
                <ul class="nav flex-column sub-menu">
                  <li class="nav-item"> <a class="nav-link" href="~/Yazarlar/Profilim">Profilim</a></li>
                  <li class="nav-item"> <a class="nav-link" href="~/Yazarlar/KontrolPaneli">Blog İstatistikleri</a></li>
                </ul>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                <span class="menu-title">Bazı Iconların Görselleri</span>
                <i class="menu-arrow"></i>
                <i class="mdi mdi-crosshairs-gps menu-icon"></i>
              </a>
              <div class="collapse" id="ui-basic">
                <ul class="nav flex-column sub-menu">
                  <li class="nav-item"> <a class="nav-link" href="~/Yazarlar/CssButonlar">Butonlar</a></li>
                  <li class="nav-item"> <a class="nav-link" href="~/Yazarlar/CssYazıTürleri">Yazı Türleri</a></li>
                  <li class="nav-item"> <a class="nav-link" href="~/Yazarlar/CssIconlar">İconlar</a></li>
                  <li class="nav-item"> <a class="nav-link" href="~/Yazarlar/FormTürleri">Form Türleri</a></li>
                  <li class="nav-item"> <a class="nav-link" href="~/Yazarlar/ChartTabloları">Chart Tabloları</a></li>
                  <li class="nav-item"> <a class="nav-link" href="~/Yazarlar/TabloTürleri">Tablo Türleri</a></li>
                </ul>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/Blog/YazarBlogListesi">
                <span class="menu-title">Bloglarım</span>
                <i class="mdi mdi mdi-apps menu-icon"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/Blog/BlogEkle">
                <span class="menu-title">Yeni Blog</span>
                <i class="mdi mdi mdi-border-color menu-icon"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/Projeler/YazarProjeListesi">
                <span class="menu-title">Projelerim</span>
                <i class="mdi mdi mdi-apps menu-icon"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/Projeler/ProjeEkle">
                <span class="menu-title">Yeni Proje</span>
                <i class="mdi mdi mdi-border-color menu-icon"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/Mesaj/Mesajlarınız">
                <span class="menu-title">Mesajlar</span>
                <i class="mdi mdi mdi-comment-processing menu-icon"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="~/Anasayfa/Index">
                <span class="menu-title">Siteye Git</span>
                <i class="mdi mdi mdi-redo menu-icon"></i>
              </a>
            </li>
             <li class="nav-item">
              <a class="nav-link" href="~/Giris/CikisYap">
                <span class="menu-title">Çıkış Yap</span>
                <i class="mdi mdi mdi-window-close menu-icon"></i>
              </a>
            </li>
          </ul>
        </nav>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
              @RenderBody()
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <footer class="footer">
            <div class="container-fluid clearfix">
              <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">© @DateTime.Now.Year Weblog. Bütün Tasarım ve Kodlama | Alparslan Tarafından Yapılmıştır.</span>
              <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"><a href="https://twitter.com/AlparslanZombi">Alparslan A.Ş</a></span>
            </div>
          </footer>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>

    <!-- plugins:js -->
    <script src="~/AdminPaneli/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/AdminPaneli/assets/js/off-canvas.js"></script>
    <script src="~/AdminPaneli/assets/js/hoverable-collapse.js"></script>
    <script src="~/AdminPaneli/assets/js/misc.js"></script>
    <script src="~/AdminPaneli/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/AdminPaneli/assets/js/dashboard.js"></script>
    <script src="~/AdminPaneli/assets/js/todolist.js"></script>
  </body>
</html>
