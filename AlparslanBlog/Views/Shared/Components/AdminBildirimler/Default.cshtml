@using EntityLayer.Concrete
@model List<Bildirimler>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                <h6 class="p-3 mb-0">Bildirimler</h6>
                @foreach(var x in Model){
                <div class="dropdown-divider"></div>
                <a class="dropdown-item preview-item">
                  <div class="preview-thumbnail">
                    <div class="@x.BildirimRengi">
                      <i class="@x.BildirimTuruSembol"></i>
                    </div>
                  </div>
                  <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                    <h6 class="preview-subject font-weight-normal mb-1">@x.BildirimTuru</h6>
                    <p class="text-gray ellipsis mb-0">@x.BildirimDetaylari</p>
                  </div>
                </a>}
                <div class="dropdown-divider"></div>
                <h6 class="p-3 mb-0 text-center"><a href="~/Bildirimler/Bildirimleriniz"> Bütün Bildirimleri Gör</a></h6>
              </div>