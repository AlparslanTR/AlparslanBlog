@using EntityLayer.Concrete
@model List<Hakkimda>
@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/Shared/_BloglarLayout.cshtml";
}
<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Hakkımızda</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="utf-8">
	<meta name="keywords" content="Weblog a Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, 
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<link rel="stylesheet" href="~/BlogTema/css/font-awesome.css" />
	<link href="~/BlogTema/css/bootstrap.css" rel='stylesheet' type='text/css' />
	<link href="~/BlogTema/css/contact.css" rel='stylesheet' type='text/css' />
	<link href="~/BlogTema/css/style.css" rel='stylesheet' type='text/css' />
	<link href="~/BlogTema/css/font-awesome.min.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
	    rel="stylesheet">
</head>
<body>
	<!--/main-->
	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Hakkımızda</h3>
			<div class="row inner-sec">
				
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">			
					<div class="blog-grid-top">
						<div class="blog_info_left_grid">						
								<img src="~/AdminPaneli/assets/images/logo1.png" style="height:300px; width:700px;" alt="">					
						</div>
						<h3>
							Biz Kimiz & Vizyonlarımız
						</h3>
						@foreach(var x in Model){
						<p>@x.HakkimdaDetay</p>}
					</div>
				</div>
				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
                            @await Html.PartialAsync("~/Views/Aboneler/AboneOl.cshtml")			
						@await Component.InvokeAsync("YazarSonBlog")
					</div>
				</aside>
				<!--//right-->
			</div>
		</div>
	</section>
</body>
</html>

